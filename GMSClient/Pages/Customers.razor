@page "/customers"
@layout MainLayout

@inject NavigationManager navigationManager
@inject StateContainer stateContainer

<h1>مشتریان</h1>


@if (customers == null)
{
    <p><em>Loading...</em></p>
    <span class="col-12">@BackendMesssage</span>
}
else
{
    <button class="btn-primary" @onclick="(()=>ShowCustomerAdd())">ایجاد مشتری</button>
    <table class="table">
        <thead>
            <tr>
                <th>پرونده</th>
                <th>نام</th>
                <th>نام خانوادگی</th>
                <th>تاریخ عضویت</th>
                <th>جنسیت</th>
                <th>موبایل</th>
                <th>تلفن</th>
                <th>کد پستی</th>
                <th>ایمیل</th>
                <th>تلگرام</th>
                <th>اینستاگرام</th>
                <th>آدرس</th>
                <th>شغل</th>
                <th>نحوه آشنایی</th>
                <th>معرف</th>
                <th>ویزیتور</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in customers)
            {
            <tr>
                <td>
                    <button class="btn-primary" @onclick="@(e => ShowCustomerProfile(item.ID))" >پروفایل ورزشی</button>
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>@item.JoinDateFa</td>
                <td>
                    @item.GenderFa
                </td>
                <td>
                    @item.Mobile
                </td>
                <td>
                    @item.Tel
                </td>
                <td>
                    @item.PostalCode
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Telegram
                </td>
                <td>
                    @item.Instagram
                </td>
                <td>
                    @item.Address
                </td>
                <td>
                    @item.JobTitle
                </td>
                <td>
                    @item.MembershipJoinTypeTitle
                </td>
                <td>
                    @item.ReferralFullName
                </td>
                <td>
                    @item.VisitorFullName
                </td>
            </tr>
            }
        </tbody>
    </table>
}

@code {
    private Customer[] customers;
    private string BackendMesssage;

    protected override async Task OnInitializedAsync()
    {
        if(string.IsNullOrWhiteSpace(stateContainer.Token))
        {
            navigationManager.NavigateTo("/");
        }

        var data = BackendEngine.Call("ClientGetAll", "{}", stateContainer.Token);


        var msg = data.GetBackendErrorMsg();
        if (msg.Length > 0)
            BackendMesssage = msg;
        else
            customers = JsonConvert.DeserializeObject<Customer[]>(data);
    }

    private async void ShowCustomerAdd()
    {
        navigationManager.NavigateTo("/customeradd");
    }

    private async void ShowCustomerProfile(long id)
    {
        navigationManager.NavigateTo("/customerprofile/" + id.ToString());
    }


}
